{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Perfect.Api"
    }
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=perfect_db;Username=perfect;Password=perfect"
  },
  "Jwt": {
    "Issuer": "Perfect.Api",
    "Audience": "Perfect.Client",
    "Key": "CHANGE_ME_32_CHARS_MINIMUM_SECRET_KEY_2026",
    "AccessTokenMinutes": 60,
    "RefreshTokenDays": 14
  },
  "Tenant": {
    "Mode": "mixed",
    "HeaderName": "X-Tenant-Id",
    "SlugHeaderName": "X-Tenant-Slug"
  },
  "Cors": {
    "AllowedOrigins": "http://localhost:4200"
  },
  "Platform": {
    "BootstrapKey": ""
  },
  "AllowedHosts": "*"
}
